{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "tags": {
            "type": "object",
            "defaultValue": {
                "provider": "tomtec"
            }
        },
        "vm_os_public": {
            "type": "string"
        }
    },
    "variables": {
        "vm_os_username": "tomtec",
        "vm_os_publickey": [parameters('vm_os_publickey')],
        "f5_base_name": "f5-appliance",
        "f5_vm_name": [concat('vm-', [variables('f5_base_name)]],
        "f5_pip_name": [concat('pip-', [variables('f5_base_name)]],
        "f5_nic_name": [concat('nic-', [variables('f5_base_name)]],
        "f5_nsg_name": [concat('nsg-', [variables('f5_base_name)]],
        "f5_vm_size": "D4",
        "app_base_name": "mockapp",
        "app_vm_name": [concat('vm-', [variables('app_base_name)]],
        "app_nic_name": [concat('nic-', [variables('app_base_name)]],
        "app_nsg_name": [concat('nsg-', [variables('app_base_name)]],
        "app_vm_size": "D4",
        "vnet_address_space": "10.5.0.0/24",
        "vnet_name": [concat('vnet-', [variables('f5_base_name)]],
        "f5_vm_count": 1,
        "app_vm_count": 1,
        "default_tags": [parameters('tags')]
    }
    "resources": {
    [
        {
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "tags": "[variables('default_tags')]",
            "name": "[variables('vnet_name')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vnet_address_space')]"
                    ]
                },
                "subnets": [
                    "name": "Default",
                    "properties": {
                        "networkSecurityGroup": "[variables('vnet_address_space')]"
                    }
                ]
            }
        },
        {
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "location": "[resourceGroup().location]",
            "tags": "[variables('default_tags')]",
            "name": "[variables('f5_nsg_name')]",
            "properties": {
                "securityRules": [

                ]
            }
        },
        {
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "location": "[resourceGroup().location]",
            "tags": "[variables('default_tags')]",
            "name": "[variables('f5_nsg_name')]",

        },

        {
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Network/networkInterfaces",
            "tags": "[variables('default_tags')]",
            "name": "[variables('f5_nic_name')]",
            "properties": {
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('f5_nsg_name'))]"
                }
                "ipConfigurations": {
                    "name": "ipconfig0",
                    "properties": {
                        "subnet": {
                            "privateIPAllocationMethod": "Dynamic",
                            "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('vnet_name')), '/subnets/Default'))]"
                        }
                    }
                }
            }
        },
        {
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Network/networkInterfaces",
            "tags": "[variables('default_tags')]",
            "name": "[variables('app_nic_name')]",
            "properties": {
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('app_nsg_name'))]"
                }
                "ipConfigurations": {
                    "name": "ipconfig0",
                    "properties": {
                        "subnet": {
                            "privateIPAllocationMethod": "Dynamic",
                            "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('vnet_name')), '/subnets/Default'))]"
                        }
                    }
                }
            }
        },
        {
            "apiVersion": "2017-12-01",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[resourceGroup().location]",
            "tags": "[variables('default_tags')]",
            "name": "[concat(variables('f5_vm_name'), padLeft(copyIndex(1), 2, '0'))]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('f5_nic_name'), padLeft(copyIndex(1), 2, '0'))]"
            ],
            "copy": {
                "name": "iterator",
                "mode": "Parallel",
                "count": "[variables('f5_vm_name')]"
            },
            
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('f5_vm_size')]"
                },
                "osProfile": {
                    "adminUsername": "[variables('vm_os_username')]",
                    "computerName": "[concat(variables('f5_vm_name'), padLeft(copyIndex(1), 2, '0'))]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "keyData": "[variables('vm_os_publickey')]",
                                    "path": "[concat('/home/', variables('vm_os_username'), '/.ssh/authorized_keys')]"
                                }
                            ]
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('f5_nic_name'), padLeft(copyIndex(1), 2, '0')))]"
                        }
                    ]
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "f5-networks",
                        "offer": "f5-big-ip-best",
                        "sku": "f5-bigip-virtual-edition-25m-best-hourly",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(variables('f5_vm_name'), padLeft(copyIndex(1), 2, '0'))]",
                        "osType": "Linux",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    }
                }
            }
        },
        {
            "apiVersion": "2017-12-01",
            "name": "[concat(variables('app_vm_name'), padLeft(copyIndex(1), 2, '0'))]",
            "type": "Microsoft.Compute/virtualMachines",
            "tags": "[variables('default_tags')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('app_nic_name'), padLeft(copyIndex(1), 2, '0'))]"
            ],
            "copy": {
                "name": "iterator",
                "mode": "Parallel",
                "count": "[variables('app_vm_name')]"
            },
            
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('app_vm_size')]"
                },
                "osProfile": {
                    "adminUsername": "[variables('vm_os_username')]",
                    "computerName": "[concat(variables('app_vm_name'), padLeft(copyIndex(1), 2, '0'))]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "keyData": "[variables('vm_os_publickey')]",
                                    "path": "[concat('/home/', variables('vm_os_username'), '/.ssh/authorized_keys')]"
                                }
                            ]
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('app_nic_name'), padLeft(copyIndex(1), 2, '0')))]"
                        }
                    ]
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "OpenLogic",
                        "offer": "CentOS",
                        "sku": "7.4",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(variables('app_vm_name'), padLeft(copyIndex(1), 2, '0'))]",
                        "osType": "Linux",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    }
                }
            }
        }
    ]
}
